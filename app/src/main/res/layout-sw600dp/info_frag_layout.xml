<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.louise.barelsappfrac.FAQ.FQA_fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mit Forløb: Barsel"
        android:textSize="50dp"
        android:textColor="#ff2b1655"
        android:textStyle="bold"/>

       <TableLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/tablelayout">
        <TableRow android:layout_width="match_parent">
            <ImageView android:src="@drawable/efterfoedsel"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:scaleType="center"
                android:layout_weight="1"
                android:id="@+id/efterfødsels"
                />
           <ImageView android:src="@drawable/barselsgang"
               android:layout_width="0dp"
               android:layout_height="200dp"
               android:scaleType="matrix"
               android:layout_weight="1"
               android:id="@+id/barselgang"/>

        </TableRow>
         <TableRow>
             <TextView android:id="@+id/efterfodtext"
             android:text="Efter Fødsel"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
                 android:textColor="#ff2b1655"
                 android:textSize="30dp"
                 />
             <TextView android:id="@+id/barselgangen"
                 android:text="Barselsgangen"
                 android:layout_width="0dp"
                 android:textColor="#ff2b1655"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:textSize="30dp"/>
         </TableRow>
         <TableRow>
             <ImageView android:src="@drawable/ambulant"
                 android:layout_width="0dp"
                 android:layout_height="200dp"
                 android:layout_weight="1"
                 android:scaleType="center"
                 android:id="@+id/ambulant"/>
             <ImageView android:src="@drawable/gode_rod"
                 android:layout_width="0dp"
                 android:layout_height="200dp"
                 android:layout_weight="1"
                 android:scaleType="center"
                 android:id="@+id/goderaod"
                 />
         </TableRow>
           <TableRow>
               <TextView android:id="@+id/ambulnatfød"
                   android:text="Ambulant Fødsel"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textColor="#ff2b1655"
                   android:textSize="30dp"
                   />
               <TextView android:id="@+id/goderåd"
                   android:text="Gode råd og Vejledning"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:textColor="#ff2b1655"
                   android:textSize="30dp"/>
           </TableRow>
           <TableRow>
               <ImageView android:src="@drawable/ernaering"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:id="@+id/ernæring"
                   android:layout_height="250dp"
                   android:scaleType="center"
                   android:layout_width="wrap_content"/>
           </TableRow>
           <TableRow>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="30dp"
                   android:layout_weight="1"
                   android:id="@+id/ernæringbarn"
                   android:textColor="#ff2b1655"
                   android:text="Ernæring af jeres barn"
                   android:gravity="center"/>
           </TableRow>

           </TableLayout>
    </LinearLayout>

    </ScrollView>



</FrameLayout>
