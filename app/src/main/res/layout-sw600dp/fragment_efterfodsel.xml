<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.louise.barelsappfrac.info.Efterfodsel">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Efter fødslen"
            android:textSize="50dp"
            android:textColor="#ff2b1655"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
           android:src="@drawable/efterfodsel"
            android:scaleType="centerInside"/>
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/efterfød_0"
            android:paddingBottom="5dp"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#ff2b1655"/>
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Barselophold"
            android:textSize="30dp"
            android:textColor="#ff2b1655"
            android:textStyle="bold"/>
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/efterfød_1"
            android:paddingBottom="5dp"
            android:textSize="20dp"
            android:textColor="#ff2b1655"/>
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ambulant fødsel"
            android:textSize="30dp"
            android:textColor="#ff2b1655"
            android:textStyle="bold"/>
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/efterfød_2"
            android:paddingBottom="5dp"
            android:textSize="20dp"
            android:textColor="#ff2b1655"/>

    </LinearLayout>
</ScrollView>
</FrameLayout>
