<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.louise.barelsappfrac.info.Barnets_trvisel">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <TextView android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingLeft="5dp"
           android:text="Barnets trivsel"
           android:textSize="50dp"
           android:textColor="#ff2b1655"
           android:textStyle="bold"/>
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:src="@drawable/babygruppe2"
           android:scaleType="centerInside"/>
       <TextView android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/gode_rod_3"
           android:paddingBottom="5dp"
           android:paddingLeft="5dp"
           android:paddingRight="5dp"
           android:textSize="20dp"
           android:textColor="#ff2b1655"/>
       <ListView
           android:layout_width="match_parent"
           android:layout_height="2400dp"
           android:paddingLeft="5dp"
           android:paddingRight="5dp"
           android:id="@+id/trivselslist">
       </ListView>
       </LinearLayout>
    </ScrollView>

</FrameLayout>
