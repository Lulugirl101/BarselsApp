<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.louise.barelsappfrac.fragment_notes">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Ny note "
            android:textSize="30sp"
            android:textColor="#ff2b1655"
            android:id="@+id/fragtitel"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Titel:"
            android:textSize="20dp"
            android:autoText="false"
            android:id="@+id/titel" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="top"
            android:background="#ffd9beff"
            android:inputType="textCapSentences"
            android:id="@+id/titeleditor"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Note:"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:inputType="textCapSentences"
            android:gravity="top"
            android:id="@+id/noteediter"
            android:selectAllOnFocus="false"
            android:background="#ffd9beff" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:id="@+id/addnotebut"
            android:textColor="#ff2b1655"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Mine noter"
            android:textSize="20dp"
            android:id="@+id/my_notes_but"
            android:textColor="#ff2b1655"
            />


    </LinearLayout>

    </ScrollView>








</FrameLayout>
